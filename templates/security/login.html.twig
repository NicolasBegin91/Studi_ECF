{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/form.css">
{% endblock %}

{% block body %}
    <div class="form_container">
        
<form method="post">
        <h2 class="text-center mb-3">Connexion</h2>
        <hr>

<div class="form_sub_div pb-3">
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
    </div>
<div class="form_sub_div">
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
</div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
<hr>

    {% if error %}
        <div class="error text-center pb-3">{{ error.messageKey|trans }}</div>
    {% endif %}
<div class="d-flex justify-content-center">
    <button class="col-12 btn form_btn" type="submit">Connexion</button>
    </div>
</form>
    </div>



{% endblock %}
