
    <form action="{{ path('app_contact') }}" class="form_container pb-3" method="post">
        <div class="col-lg-12">
            <h2 class="text-center">Formulaire de contact</h2>
        </div>
        <hr>

        <div class="form-group form_sub_div">
            <label for="contact_email" class="required form_sub_label">Email</label>
            <input type="text" class="form_sub_input" id="contact_email" name="contact_email" required="required" maxlength="255">
        </div>

        <div class="form-group form_sub_div">
            <label for="contact_username" class="required form_sub_label">Nom</label>
            <input type="text" class="form_sub_input" id="contact_username" name="contact_username" required="required" maxlength="255">
        </div>

        <div class="form-group form_sub_div">
            <label for="contct_content" class="required form_sub_label">Message</label>
            <textarea id="contact_content" class="form_sub_input" name="contact_content" required="required" maxlength="255">
{% if vehicule %}Contact automatique pour le véhicule *{{vehicule.model}}* immatriculé *{{vehicule.registrationNumber}}*
Entrer votre message après cette ligne
-----{% endif %}
            </textarea>
        </div>

        <hr>
    <button class="btn form_btn">{{ 'Send'|trans }}</button>
    </form>