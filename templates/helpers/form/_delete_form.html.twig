<form method="post" class="col-12 col-md-3 p-0 mb-lg-0" action="{{path('app_' ~ destination ~ '_delete', {'id': id})}}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn form_btn">{{ 'Delete'|trans }}</button>
</form>
